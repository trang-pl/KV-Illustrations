# MCP Figma Sync Server Environment Variables
# Sao chép file này thành .env và điền các giá trị thực

# Figma API Configuration (BẮT BUỘC)
FIGMA_API_TOKEN=your_figma_api_token_here

# Server Configuration
HOST=localhost
PORT=8001

# Git Integration (TUỲ CHỌN)
GIT_REPO_PATH=./repo
GIT_REMOTE_NAME=origin
GIT_BRANCH=main
GIT_AUTO_COMMIT=true
GIT_AUTO_PUSH=true

# Sync Configuration
SYNC_CACHE_DURATION=3600
SYNC_DEV_READY_THRESHOLD=0.8
SYNC_FORCE_SYNC_ALLOWED=true

# Logging
LOG_LEVEL=INFO

# Database (SQLite mặc định)
DATABASE_URL=sqlite:///./figma_sync.db